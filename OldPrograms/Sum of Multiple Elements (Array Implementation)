#include<iostream.h>
void main()
{
	float a[100],sum=0;
	int n;
	cout<<"How many numbers would you like to enter?\n";
	cin>>n;
	cout<<"Enter the numbers in succesion with return key after every number\n";
	for (int i=0;i<n;i++)
	{
	cin>>a[i];
	sum =sum+a[i];
	}
	cout<<"\n\nSum is = "<<sum<<endl;
	cout<<"\n\nAverage is = "<<sum/n;
}
